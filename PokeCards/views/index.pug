extends layout

block content
  include mixins/pokeCard
  div.container
    p 1 = fairy, 2 = poison, 3 = dark, 4 = normal, 5 = fighting, 6 = ghost, 7 = water, 8 = fire, 0 = nothing
    form(action='/' method='get')
      div.form-input
        label(for='element') Element
        select(id='element' name='element' autocomplete='off')
          each element in categories
            option(value=element selected = (element === selectedCategory)) #{element}
      div.form-input
        label(for='random') Random
        input(type='checkbox' name='random' id='random' checked=searchRandom)
      button.button.save(type='submit') Filter
  div.container
    div.add-button-row
      a.button.save(href='/add') Add Poke
  div.container
    each poke in pokes
      +pokeCard(poke)